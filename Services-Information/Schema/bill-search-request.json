{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "Schema for the get bill search input parameters",
  "$ref": "#/definitions/BillSearchRequest",
  "definitions": {
    "BillSearchRequest": {
      "description": "Input parameters for the get bill search  service.",
      "type": "object",
      "properties": {
        "billingAccount": {
          "description": "Billing account (EPA Site Id). If date range parameters are not provided the service return bill history from inception to the curent date",
          "type": "string",
          "pattern": "^([A-Z][A-Z][A-Za-z0-9]{2,10})$"
        },
        "billStatus": {
          "description": " Contains bill status.",
          "type": "string",
          "enum": [
            "Unpaid",
            "InProgress",
            "ReadyForPayment",
            "Paid",
            "SentToCollections",
            "Credit",
            "ZeroBalance"
          ]
        },
        "startDate": {
          "type": "string",
          "format": "date-time"
        },
        "endDate": {
          "type": "string",
          "format": "date-time"
        },
        "amountChanged": {
          "type": "boolean"
        },
        "pageNumber ": {
          "type": "number"
        }
      },
      "additionalProperties": false
    }
  }
}