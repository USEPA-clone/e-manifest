{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "Schema for site-search service",
  "$ref": "#/definitions/SiteSearch",
  "definitions": {
    "SiteSearch": {
      "type": "object",
      "properties": {
        "epaSiteId": {
          "type": "string",
          "maxLength": 12
        },
        "name": {
          "type": "string",
          "maxLength": 80
        },
        "streetNumber": {
          "type": "string",
          "maxLength": 12
        },
        "address1": {
          "type": "string",
          "maxLength": 50
        },
        "city": {
          "type": "string",
          "maxLength": 25
        },
        "state": {
          "type": "string",
          "minLength": 2,
          "maxLength": 2
        },
        "zip": {
          "type": "string",
          "maxLength": 14
        },
        "siteType": {
          "$ref": "#/definitions/SiteType"
        },
        "pageNumber": {
          "type": "number"
        }
      },
      "additionalProperties": false
    },
    "SiteType": {
      "type": "string",
      "enum": [
        "Tsdf",
        "Generator",
        "Transporter",
        "Broker"
      ]
    }
  }
}